#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

#define Base        0
#define Nav         1
#define Sym         2
#define Fun         3
#define Game        4
#define Gameplus    5

&mt {
    quick-tap-ms = <100>;
    global-quick-tap;
    flavor = "tap-preferred";
    tapping-term-ms = <170>;
};

&lt {
    tapping-term-ms = <240>;
    flavor = "balanced";
    quick-tap-ms = <150>;
};

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "homerow_mods";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
            quick-tap-ms = <125>;
            global-quick-tap;
            bindings = <&kp>, <&kp>;
        };
    };

    combos { compatible = "zmk,combos"; };

    keymap {
        compatible = "zmk,keymap";

        Default {
            display-name = "Default";
            bindings = <
       &kp Q           &kp W           &kp F               &kp P             &kp B        &kp J      &kp L             &kp U               &kp Y           &kp SEMICOLON
       &hm LEFT_GUI A  &hm LEFT_ALT R  &hm LEFT_CONTROL S  &hm LEFT_SHIFT T  &kp G        &kp M      &hm LEFT_SHIFT N  &hm LEFT_CONTROL E  &hm LEFT_ALT I  &hm LEFT_WIN O
&none  &kp Z           &kp X           &kp C               &kp D             &kp V        &kp K      &kp H             &kp COMMA           &kp PERIOD      &kp SLASH       &none
                                       &kp DELETE          &lt 1 TAB         &kp SPACE    &kp ENTER  &lt 2 ESCAPE      &kp BACKSPACE
            >;
        };

        Navigation {
            display-name = "Navigation";
            bindings = <
       &none           &none           &none             &none            &none     &none   &none           &none             &none         &none
       &kp LEFT_WIN    &kp LEFT_ALT    &kp LEFT_CONTROL  &kp LEFT_SHIFT   &none     &none   &kp LEFT_SHIFT  &kp LEFT_CONTROL  &kp LEFT_ALT  &kp LEFT_GUI
&none  &kp LEFT_ARROW  &kp DOWN_ARROW  &kp UP_ARROW      &kp RIGHT_ARROW  &none     &none   &kp HOME        &kp END           &kp PAGE_UP   &kp PAGE_DOWN  &none
                                       &trans            &trans           &trans    &trans  &trans          &trans
            >;
        };

        Symbols {
            display-name = "Symbols";
            bindings = <
       &kp LEFT_BRACE  &kp AMPERSAND    &kp ASTERISK          &kp LEFT_PARENTHESIS   &kp RIGHT_BRACE    &none   &none           &none             &none         &none
       &kp COLON       &kp DOLLAR       &kp PERCENT           &kp CARET              &kp PLUS           &none   &kp LEFT_SHIFT  &kp LEFT_CONTROL  &kp LEFT_ALT  &kp LEFT_WIN
&none  &kp TILDE       &kp EXCLAMATION  &kp AT_SIGN           &kp HASH               &kp PIPE           &none   &none           &none             &none         &none         &none
                                        &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp UNDERSCORE     &trans  &trans          &trans
            >;
        };

        Numbers {
            bindings = <
       &kp LEFT_BRACKET  &kp NUMBER_7  &kp NUMBER_8      &kp NUMBER_9  &kp RIGHT_BRACKET    &none   &none           &none             &none         &none
       &kp SEMICOLON     &kp NUMBER_4  &kp NUMBER_5      &kp NUMBER_6  &kp EQUAL            &none   &kp LEFT_SHIFT  &kp LEFT_CONTROL  &kp LEFT_ALT  &kp LEFT_WIN
&none  &kp GRAVE         &kp NUMBER_1  &kp NUMBER_2      &kp NUMBER_3  &kp BACKSLASH        &none   &none           &none             &none         &none         &none
                                       &kp SINGLE_QUOTE  &kp NUMBER_0  &kp MINUS            &trans  &trans          &trans
            >;

            label = "Numbers";
        };

        Function {
            bindings = <
       &kp F12  &kp F7  &kp F8  &kp F9  &none     &none   &none           &none             &none         &none
       &kp F11  &kp F4  &kp F5  &kp F6  &none     &none   &kp LEFT_SHIFT  &kp LEFT_CONTROL  &kp LEFT_ALT  &kp LEFT_WIN
&none  &kp F10  &kp F1  &kp F2  &kp F3  &none     &none   &none           &none             &none         &none         &none
                        &trans  &trans  &trans    &trans  &trans          &trans
            >;

            label = "Function";
        };

        Media {
            bindings = <
        &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans
        &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans    &trans  &trans  &trans
            >;

            label = "Media";
        };
    };
};
